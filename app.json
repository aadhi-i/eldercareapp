{
  "expo": {
    "name": "eldercareapp",
    "slug": "eldercareapp",
    "version": "1.0.0",
    "owner": "aadhi-i",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "https",
    "userInterfaceStyle": "automatic",
  "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone to let you speak to the assistant for medicines, routines, and helpful guidance.",
        "NSMotionUsageDescription": "Motion data helps detect falls using the accelerometer and gyroscope."
      }
    },
    "android": {
      "package": "com.adithyasnair.eldercare",
      "permissions": [
        "RECORD_AUDIO",
        "POST_NOTIFICATIONS",
        "CAMERA"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "minSdkVersion": 24,
            "kotlinVersion": "2.0.21",
            "newArchEnabled": true,
            "gradleProperties": {
              "android.useAndroidX": true,
              "android.enableJetifier": true
            }
          }
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
  "expo-web-browser",
  "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "3e5495bb-f023-47bf-a704-af38e74cc22e"
      }
    }
  }
}
