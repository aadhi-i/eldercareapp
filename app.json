{
  "expo": {
    "name": "eldercareapp",
    "slug": "eldercareapp",
    "version": "1.0.0",
    "owner": "aadhi-i",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "https",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
        "supportsTablet": true,
        "infoPlist": {
          "NSMicrophoneUsageDescription": "This app uses the microphone to let you speak to the assistant for medicines, routines, and helpful guidance."
        }
    },
    "android": {
      "package": "com.adithyasnair.eldercare",
        "permissions": ["RECORD_AUDIO"],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-web-browser",
      "expo-barcode-scanner"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "3e5495bb-f023-47bf-a704-af38e74cc22e"
      }
    }
  }
}
